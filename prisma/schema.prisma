// This is your Prisma schema file
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// User model
model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // User preferences and settings
  settings      UserSettings?
  
  // User content
  entries       Entry[]
  tags          Tag[]
  
  // Usage tracking
  usage         UserUsage[]
  
  // Auth
  accounts      Account[]
  sessions      Session[]
}

// NextAuth.js Models
model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// User Settings
model UserSettings {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  userId             String   @unique @db.ObjectId
  theme              String   @default("system") // light, dark, system
  emailNotifications Boolean  @default(true)
  reminderFrequency  String   @default("weekly") // daily, weekly, monthly
  timezone           String   @default("UTC")
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Journal Entry
model Entry {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  mood      Int // 0-100 scale
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String   @db.ObjectId
  isPrivate Boolean  @default(false)
  weather   String?
  location  String?
  hashtags  String[] // Store hashtags directly in the entry for MongoDB
  imageUrls String[] // Store image URLs directly in the entry for MongoDB

  // Relations
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  memories  Memory[]
  summary   EntrySummary?

  @@index([userId, date])
  @@index([userId, createdAt])
}

// Tags (Global tags for better organization)
model Tag {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  color      String?
  userId     String   @db.ObjectId
  usageCount Int      @default(0)
  createdAt  DateTime @default(now())

  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, name])
  @@index([userId])
}

// "On This Day" memories
model Memory {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  entryId         String    @db.ObjectId
  userId          String    @db.ObjectId
  date            DateTime
  yearsAgo        Int
  notificationSent Boolean  @default(false)
  notificationDate DateTime?

  entry Entry @relation(fields: [entryId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}

// AI-generated summaries
model EntrySummary {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  entryId   String   @unique @db.ObjectId
  summary   String
  keyPoints String[]
  sentiment String   // positive, neutral, negative
  createdAt DateTime @default(now())

  entry Entry @relation(fields: [entryId], references: [id], onDelete: Cascade)
}

// Usage tracking for rate limiting
model UserUsage {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String   @db.ObjectId
  month           String   // YYYY-MM format
  entriesCount    Int      @default(0)
  imageToTextCount Int     @default(0)
  storageUsed     Int      @default(0) // in bytes
  aiSummariesCount Int     @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, month])
  @@index([userId])
} 